  <body>
    <%- include("./partials/nav") %>
    <main>
      <div class="profile">
        <img src="<%= user.thumbnail %> " alt="User照片" />
        <div class="account"><%= user.username %></div>
        <div class="intro"><%= user.intro %></div>
      </div>

      <div class="detail">
        <div class="favorite">
          <h1><%= area.toUpperCase() %></h1>
          <div class="article-items">
            <% articleList.forEach(article=>{ %>
            <div class="item">
              <a href="/article/<%= article._id %> ">
                <div class="img-wrap">
                  <img
                    src="<%= article.mainPic %> "
                    alt="<%= article.title %> "
                  />
                  <div class="overview"><%= article.intro %></div>
                </div>
              </a>
              <div class="intro">
                <div class="title"><%= article.title %></div>
                <% if(typeof(userLoveArticles)=="undefined" || userLoveArticles.indexOf(article._id)==-1){ %> 
                  <div
                  class="likes"
                  data-id="<%= article._id %>"
                  data-likes="<%= article.likes %> "
                  >
                <% }else{ %> 
                  <div
                  class="likes red"
                  data-id="<%= article._id %>"
                  data-likes="<%= article.likes %> "
                >
                <% } %> 
                  <i class="fas fa-heart"></i>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>


      
